<div class="row">
  <div class="col-2"></div>
  <div class="col-8">
    <div class="card">
      <div class="card-body">
        <a
          href="/games/create"
          class="btn btn-sm btn-primary mb-3 float-right"
        ><i class="fas fa-plus mr-1"></i>Create a new room</a>
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Games Room</th>
              <th scope="col">Winner</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            {{#each data}}
              <tr>
                <th scope="row">{{incremented @index}}</th>
                <td>{{room}}</td>
                <td>{{winner}}</td>
                <td>
                  <a
                    href="/games/{{id}}/player"
                    class="btn btn-sm btn-primary"
                  ><i class="fas fa-headset mr-1"></i>Add player</a>
                  <a href="/games/{{id}}" class="btn btn-sm btn-success"><i
                      class="fas fa-info-circle mr-1"
                    ></i>Detail Rooms</a>
                  <a href="/games/edit/{{id}}" class="btn btn-sm btn-info"><i
                      class="fas fa-edit mr-1"
                    ></i>Edit</a>
                  <form
                    method="post"
                    action="/games/{{id}}?_method=DELETE"
                    class="d-inline"
                  >
                    <input type="hidden" name="_method" value="DELETE" />
                    {{#each user}}
                      <input type="hidden" name="userId" value="{{id}}" />
                    {{/each}}
                    <button
                      type="submit"
                      class="btn btn-sm btn-danger"
                      onclick="return confirm('Are you sure to delete?')"
                    ><i class="fas fa-trash-alt mr-1"></i>Delete</button>
                  </form>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-2"></div>
</div>