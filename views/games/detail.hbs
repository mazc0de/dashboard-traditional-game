<div class="row my-5">
  <div class="col-4"></div>
  <div class="col-4">
    <div class="card">
      <div class="card-header">
        <a href="/games" class="btn btn-md btn-secondary"><i
            class="fas fa-chevron-left"
          ></i></a>
      </div>
      <div class="card-body">
        <div class="row d-flex justify-content-center">
        </div>
        <ol class="list-group list-group-numbered my-3">
          <li
            class="list-group-item d-flex justify-content-between align-items-start"
          >
            <div class="ms-2 me-auto">
              <h5>
                <strong>
                  Game rooms :
                </strong>
              </h5>
              {{data.room}}
            </div>
          </li>
          <li
            class="list-group-item d-flex justify-content-between align-items-start"
          >
            <div class="ms-2 me-auto">
              <h5>
                <strong>
                  Participants :
                </strong>
              </h5>
              {{#each user}}
                <ul>
                  <li>
                    {{username}}
                  </li>
                </ul>
              {{/each}}
            </div>
          </li>
          <li
            class="list-group-item d-flex justify-content-between align-items-start"
          >
            <div class="ms-2 me-auto">
              <h5>
                <strong>
                  Winner :
                </strong>
              </h5>
              {{data.winner}}
            </div>
          </li>
          <li
            class="list-group-item d-flex justify-content-between align-items-start"
          >
            <div class="ms-2 me-auto">
              <h5>
                <strong>
                  Choice :
                </strong>
              </h5>
              {{data.choice}}
            </div>
          </li>
          <li
            class="list-group-item d-flex justify-content-between align-items-start"
          >
            <div class="ms-2 me-auto">
              <h5>
                <strong>
                  Play on :
                </strong>
              </h5>
              {{data.history}}
            </div>
          </li>
        </ol>
      </div>
    </div>
  </div>

  <div class="col-4"></div>
</div>